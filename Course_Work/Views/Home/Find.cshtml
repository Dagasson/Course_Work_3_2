@model IEnumerable<Shop>
@{
    ViewData["Title"] = "Find";
}
<h2>Поиск</h2>
@if (@Model.Count() == 0)
{
    <h2>По вашему запросу ничего не найдено!</h2>
}
@if (Model.Count() > 0)
{
    <h3>Товары:</h3>
    <table>
        <tr>
            <td>Наименование</td>
            <td>Цена</td>
            <td>Информация</td>
            <td></td>
        </tr>
        @foreach (var prod in Model)
        {
            <tr>
                <td>@prod.Name</td>
                <td>@prod.Cost</td>
                <td>@prod.Info</td>
                <td><a href="~/Home/Buy/@prod.Id">Купить</a></td>
            </tr>
        }
    </table>
}
